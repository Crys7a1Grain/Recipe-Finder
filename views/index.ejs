<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/normalize.css" />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header class="header">
      <div class="container" style="align-items: center;">
        <p style="color: aliceblue; font-size: 22px;">Поиск рецептов по ингредиентам</p>
      </div>
    </header>

    <div class="main">
      <div class="container">
        <div class="column">
          <form id="search-form">
            <% ingredients.forEach((ingredient) => { %>
            <input
              type="hidden"
              name="ingredients[]"
              value="<%= ingredient.id %>"
            />
            <% }); %>
            <button type="submit">Найти</button>
            <button id="clearButton">Очистить</button>
          </form>

          <div>
            <% const excludedIds = [44, 45, 46]; %> <%
            categories.forEach((category) => { %>
            <li class="category">
              <%= category.name %>
              <ul>
                <% ingredients = ingredients.filter(ingredient =>
                !excludedIds.includes(ingredient.id))
                ingredients.forEach((ingredient) => { if (ingredient.category_id
                === category.id) { %>
                <li class="ingredient" data-id="<%= ingredient.id %>">
                  <%= ingredient.name %>
                </li>
                <% } %> <% }); %>
              </ul>
            </li>
            <% }); %>
          </div>
        </div>

        <div class="column">
          <h3>Результаты поиска:</h3>
          <ul id="myList"></ul>
        </div>
      </div>
    </div>

    <script src="/main.js"></script>
  </body>
</html>
