<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Рецепты</title>
    <link rel="stylesheet" href="/normalize.css" />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header class="header">
      <div class="container">
        <div class="header-content">
          <a class="title header-title" href="/">Поиск рецептов по ингредиентам</a>
          <a class="title header-title" href="/recipes">Рецепты</a>
        </div>
      </div>
    </header>

    <div class="main">
      <div class="container">
        <div class="main-content">
          <h1 class="main-title">Список рецептов</h1>
          <% recipes.forEach((recipe) => { %>
          <div class="item">
            <img
              class="item-image"
              src="data:image/jpg;base64,<%= recipe.image %>"
              alt="<%= recipe.name %>"
            />
            <div class="box">
              <p class="item-name"><%= recipe.name %></p>
              <p class="item-description"><%= recipe.description %></p>
              <button class="item-button" onclick="openRecipePage('<%= recipe.id %>')">Посмотреть рецепт</button>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>

    <script>
      function openRecipePage(recipeId) {
        window.open(`/recipe/${recipeId}`, "_blank");
      }
    </script>
  </body>
</html>
